{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "iso_checksum": "fd1951905c4c26560c807e81767278fec46ef8bb",
      "iso_checksum_type": "sha1",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1503.iso",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "480"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos-7.1"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/centos/pre-base.sh",
        "scripts/01-base.sh",
        "scripts/02-sudoers.sh",
        "scripts/03-vagrant.sh",
        "scripts/04-guestadditions.sh",
        "scripts/05-cleanup.sh",
        "scripts/centos/post-cleanup.sh",
        "scripts/99-minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "output": "centos-7.1.box",
      "type": "vagrant"
      }
  ]
}
