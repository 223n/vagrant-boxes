{
  "variables": {
    "version": "",
    "cloud_token": ""
  },
  "builders": [
    {
      "name": "debian-8.0",
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "disk_size": 40960,
      "iso_url": "http://cdimage.debian.or.jp/8.0.0/amd64/iso-cd/debian-8.0.0-amd64-netinst.iso",
      "iso_checksum_type": "sha1",
      "iso_checksum": "eab72f4ba73adea580aeaec91649e846aac89fa9",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8.0/preseed.cfg <wait>",
        "hostname={{ .Name }} <wait>",
        "domain=vagrantup.com <wait>",
        "frontend=noninteractive <wait>",
        "<enter><wait>"
      ],
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "sudo /sbin/shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/debian/base.sh",
        "scripts/debian/guestadditions.sh",
        "scripts/debian/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "debian-8.0.box"
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "wate/debian-8.0",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `version`}}"
    }
  ]
}
