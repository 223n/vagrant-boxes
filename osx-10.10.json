{
  "variables": {
    "autologin": "true",
    "install_vagrant_keys": "true",
    "update_system": "true",
    "username": "vagrant",
    "password": "vagrant"
  },
  "builders": [
    {
      "boot_wait": "2s",
      "disk_size": 20480,
      "guest_additions_mode": "disable",
      "guest_os_type": "MacOS109_64",
      "hard_drive_interface": "sata",
      "iso_checksum_type": "md5",
      "iso_checksum": "bf28dd595214b6df393a1d2cb062c45c",
      "iso_interface": "sata",
      "iso_url": "packer_cache/OSX_InstallESD_10.10.5_14F27.dmg",
      "ssh_port": 22,
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '{{user `username`}}'|sudo -S shutdown -h now",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--audiocontroller", "hda"],
        ["modifyvm", "{{.Name}}", "--boot1", "dvd"],
        ["modifyvm", "{{.Name}}", "--boot2", "disk"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--cpuidset", "00000001", "000306a9", "00020800", "80000201", "178bfbff"],
        ["modifyvm", "{{.Name}}", "--firmware", "efi"],
        ["modifyvm", "{{.Name}}", "--hpet", "on"],
        ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--mouse", "usbtablet"],
        ["modifyvm", "{{.Name}}", "--vram", "9"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "osx-10.10.box"
    }
  ],
  "provisioners": [
    {
      "destination": "/private/tmp/set_kcpassword.py",
      "source": "./scripts/osx/support/set_kcpassword.py",
      "type": "file"
    },
    {
      "type": "shell",
      "environment_vars": [
        "AUTOLOGIN={{user `autologin`}}",
        "INSTALL_VAGRANT_KEYS={{user `install_vagrant_keys`}}",
        "PASSWORD={{user `password`}}",
        "UPDATE_SYSTEM={{user `update_system`}}",
        "USERNAME={{user `username`}}"
      ],
      "scripts": [
        "./provision/osx/vagrant.sh",
        "./provision/osx/xcode-cli-tools.sh",
        "./provision/osx/add-network-interface-detection.sh",
        "./provision/osx/autologin.sh",
        "./provision/osx/system-update.sh",
        "./provision/osx/shrink.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
    }
  ]
}
