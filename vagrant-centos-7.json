{
  "variables": {
    "vagrantcloud_token": "{{env `VAGRANTCLOUD_TOKEN`}}"
  },
  "builders": [{
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7/ks.cfg<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_size": 20480,
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_os_type": "RedHat_64",
    "hard_drive_interface": "sata",
    "http_directory": "http",
    "iso_checksum": "fe3d960cce4d2c1c9f1b66817fe87cc0ee1a1c6c5dd126204cb5c33d51a45620",
    "iso_checksum_type": "sha256",
    "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1708.iso",
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_username": "vagrant",
    "ssh_wait_timeout": "10000s",
    "type": "virtualbox-iso",
    "vboxmanage": [
      [
        "modifyvm",
        "{{.Name}}",
        "--memory",
        "1024"
      ],
      [
        "modifyvm",
        "{{.Name}}",
        "--cpus",
        "1"
      ]
    ],
    "virtualbox_version_file": ".vbox_version"
  }],
  "provisioners": [{
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "expect_disconnect": true,
      "inline": [
        "yum update -y",
        "reboot"
      ]
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/centos/pre-base.sh",
        "scripts/01-base.sh",
        "scripts/centos/post-base.sh",
        "scripts/02-vagrant.sh",
        "scripts/03-virtualbox.sh",
        "scripts/90-cleanup.sh",
        "scripts/centos/post-cleanup.sh",
        "scripts/99-minimize.sh"
      ]
    }
  ],
  "post-processors": [
    [{
        "type": "vagrant",
        "output": "centos7.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `vagrantcloud_token`}}",
        "box_tag": "wate/centos-7",
        "no_release": false,
        "version": "0.4.1",
        "version_description": "CentOS 7.4(64bit)日本語環境用"
      }
    ]
  ]
}
