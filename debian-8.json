{
  "push": {
    "name": "wate/debian-8",
    "exclude": [".*", "*.json", "*.box", "output-*", "packer_cache", "Vagrantfile"]
  },
  "variables": {
      "atlas_username": "wate",
      "atlas_name": "debian-8"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "disk_size": 40960,
      "iso_url": "http://cdimage.debian.or.jp/8.2.0/amd64/iso-cd/debian-8.2.0-amd64-netinst.iso",
      "iso_checksum_type": "sha1",
      "iso_checksum": "a41801dcc0e37bce2406e18b334f99ae366d6fde",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8/preseed.cfg <wait>",
        "hostname=jessie <wait>",
        "domain=vagrantup.com <wait>",
        "frontend=noninteractive <wait>",
        "<enter><wait>"
      ],
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "sudo /sbin/shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/debian/pre-base.sh",
        "scripts/01-base.sh",
        "scripts/debian/post-base.sh",
        "scripts/02-vagrant.sh",
        "scripts/debian/pre-guestadditions.sh",
        "scripts/03-guestadditions.sh",
        "scripts/04-cleanup.sh",
        "scripts/debian/post-cleanup.sh",
        "scripts/99-minimize.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [[
    {
      "type": "vagrant",
      "keep_input_artifact": false
    },
    {
      "type": "atlas",
      "only": ["virtualbox-iso"],
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "description": "Debian 8.2(64bit)日本語環境用\nVirtualBox Guest Additions 5.0.2",
        "version": "0.2.0"
      }
    }
  ]]
}
