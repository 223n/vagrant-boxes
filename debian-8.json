{
  "variables": {
    "vagrantcloud_token": "{{env `VAGRANTCLOUD_TOKEN`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "disk_size": 20480,
      "iso_url": "http://debian.nctu.edu.tw/debian-cd/8.8.0/amd64/iso-cd/debian-8.8.0-amd64-netinst.iso",
      "iso_checksum_type": "sha1",
      "iso_checksum": "bcc662eb3921022bab06c2f18b9307f55a4ae3dd",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8/preseed.cfg <wait>",
        "hostname=jessie <wait>",
        "domain=vagrantup.com <wait>",
        "frontend=noninteractive <wait>",
        "<enter><wait>"
      ],
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "sudo /sbin/shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "provision/debian.yml"
    },
    {
      "type": "shell",
      "scripts": "provision/minimize.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "jessie.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `vagrantcloud_token`}}",
        "box_tag": "wate/debian-8",
        "no_release": false,
        "version": "0.8.2",
        "version_description": "Debian 8.8(64bit)日本語環境用"
      }
    ]
  ]
}
