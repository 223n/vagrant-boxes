{
  "variables": {
    "vagrantcloud_token": "{{env `VAGRANTCLOUD_TOKEN`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "disk_size": 20480,
      "iso_url": "http://cdimage.debian.or.jp/9.0.0/amd64/iso-cd/debian-9.0.0-amd64-netinst.iso",
      "iso_checksum_type": "sha1",
      "iso_checksum": "24cba797d60a8e5b64a4dae250ab9200ccb74212",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-9/preseed.cfg <wait>",
        "frontend=noninteractive <wait>",
        "<enter><wait>"
      ],
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "sudo /sbin/shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "provision/debian.yml"
    },
    {
      "type": "shell",
      "scripts": "provision/minimize.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "stretch.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `vagrantcloud_token`}}",
        "box_tag": "wate/debian-9",
        "no_release": false,
        "version": "0.0.3",
        "version_description": "Debian 9.0(64bit)日本語環境用"
      }
    ]
  ]
}
