{
  "variables": {
    "version": "0.0.1",
    "cloud_token": ""
  },
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.6/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "iso_checksum": "2560335ef975907799251ae9d6a0fa2e4d289704",
      "iso_checksum_type": "sha1",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/6.6/isos/x86_64/CentOS-6.6-x86_64-netinstall.iso",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "480"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos-6.6"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/centos/base.sh",
        "scripts/centos/guestadditions.sh",
        "scripts/centos/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "output": "centos-6.6.box",
      "type": "vagrant"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "wate/centos-6.6",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `version`}}"
      }
  ]
}
